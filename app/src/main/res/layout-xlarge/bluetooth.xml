<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf">

    <ScrollView
        android:layout_height="fill_parent"
        android:layout_width="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:text="Creative Bluetooth Speakers"
                android:textSize="60sp"
                android:textColor="@android:color/primary_text_light"
                android:paddingLeft="20dp"
                android:paddingTop="10dp"
               />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bcreativeimage"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/b1"
                    android:layout_weight="0.5" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearlayoutbcreative1"
                    android:orientation="vertical"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creative Bluetooth Bluetooth Woof"
                        android:id="@+id/bbutton1"
                        android:textSize="50sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Rs. 2600"
                        android:id="@+id/bt1"
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:layout_marginTop="10dp" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="#ffffff"
                >

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/bbcreativeimage2"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/b2"
                    android:layout_weight="0.5" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/linearlayoutbcreative2"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Creative Bluetooth Speakers D80"
                        android:id="@+id/bbutton2"
                        android:textSize="50sp"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="30dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="Rs. 3150"
                        android:id="@+id/bt2"
                        android:textStyle="bold"
                        android:textSize="50sp"
                        android:layout_marginTop="10dp" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</LinearLayout>
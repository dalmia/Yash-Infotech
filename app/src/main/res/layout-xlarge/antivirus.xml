<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:weightSum="1"
    >

    <ViewFlipper
        android:id="@+id/flipper1"
        android:layout_width="fill_parent"
        android:layout_height="400dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewantivirus"
        android:layout_weight="0.02"
        android:layout_margin="20sp"
        android:src="@drawable/quickhealmain" />


        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="200sp"
            android:id="@+id/imageViewkas5"
            android:layout_weight="0.02"
            android:layout_margin="20sp"
            android:src="@drawable/kasperimage" />

    </ViewFlipper>

    <Button
        android:id="@+id/antivirusmain"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="#ffae0cab"
        android:text="ANTIVIRUS"
        android:textColor="#ffffff"
        android:textSize="27sp"
        android:textStyle="bold"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal" />


    <Button
        android:id="@+id/anti1"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="Kaspersky"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp" />


    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal" />


    <Button
        android:id="@+id/anti2"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:text="Quick Heal"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp" />
</LinearLayout>
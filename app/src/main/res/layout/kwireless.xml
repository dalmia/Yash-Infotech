<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView

                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="Wireless Logitech Keyboards"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logitechkawirelessimage1"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/key4" />

                <LinearLayout
                    android:id="@+id/macaulogitechlayouthai1"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    android:layout_marginLeft="5sp">

                    <TextView
                        android:id="@+id/logitechwirelesskeyboardkanaam"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:layout_weight="0.9"
                        android:text="Logitech Wireless Combo MK 220"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/logitechwrelesskeyboardkadam"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 1110"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/logitechkawirelessimage2"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:src="@drawable/key5" />

                <LinearLayout
                    android:id="@+id/machaulayouthlogitechwirelesska2"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    android:weightSum="1"
                    android:layout_marginLeft="5sp">

                    <TextView
                        android:id="@+id/logitechkawirelesskeyboardkanaam2"
                        android:layout_width="match_parent"
                        android:layout_weight="0.9"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:text="Logitech Wireless Multimedia Combo MK 260r"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/logitechkawirelesskaybaordkadaam2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 1320"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
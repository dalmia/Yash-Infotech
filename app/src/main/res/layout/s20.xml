<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="Creative 2.0 Speakers"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/s20image1"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/speaker1" />

                <LinearLayout
                    android:id="@+id/linearlayouts201"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kasantibutton1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:text="Creative Speakers A35"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 525"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/s20image2"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:src="@drawable/speaker2" />

                <LinearLayout
                    android:id="@+id/linearlayouts20"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/kasantibutton2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:text="Creative USB Speakers A50"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 610"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
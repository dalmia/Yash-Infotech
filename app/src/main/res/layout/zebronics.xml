<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#ffdfdfdf"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="250sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30sp"
        android:src="@drawable/kasperimage" />

    <Button
        android:id="@+id/buttonhp"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ff2cdd86"
        android:paddingRight="220sp"
        android:text="Zebronics"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />


    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/buttonzlan1"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="270sp"
        android:text="Lan Card"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"
        />

    <Button
        android:id="@+id/buttonzmoth1"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="250sp"
        android:text="Motherboard"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="250sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30sp"
        android:src="@drawable/kasperimage" />
    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonheadkeyboard"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ffda4ffe"
        android:paddingRight="210sp"
        android:text="SPEAKERS"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonsp1"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="240sp"
        android:text="Creative 2.0"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />


    <Button
        android:id="@+id/buttonsp2"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="240sp"
        android:text="Creative 2.1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonsp3"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="240sp"
        android:text="Creative 5.1"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonsp4"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="135sp"
        android:text="Creative Bluetooth Speakers"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical"

    >





    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="250sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30sp"
        android:src="@drawable/kasperimage" />

    <Button
        android:id="@+id/button32"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ffff1f10"
        android:paddingRight="240sp"
        android:text="ZOTAC"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttoncard1"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="220sp"
        android:text="Nvidia Chipset"
        android:textColor="@android:color/black"
        android:textSize="15sp" />




    <Button
        android:id="@+id/button"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10sp"
        android:background="#ffcf79ff"
        android:paddingRight="220sp"
        android:text="SAPPHIRE"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/buttoncard2"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="200sp"
        android:text="Ati Radeon Chipset"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


</LinearLayout>
                    android:id="@+id/qantiimage"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/avprofinal" />

                <LinearLayout

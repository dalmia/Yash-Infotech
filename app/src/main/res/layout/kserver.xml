<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40sp"
                android:paddingLeft="20sp"
                android:paddingTop="10sp"
                android:text="Kaspersky Small Office Security"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kasserverimage"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="20sp"
                    android:src="@drawable/serverfinal" />

                <LinearLayout
                    android:id="@+id/serverlinearlayout"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/kasserverbutton1"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:text="Kaspersky Small Office Security 5 Nodes+1Server+5 Mobile Devices"
                        android:layout_weight="1"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/servertextView"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 4300
                        "
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="200sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:layout_marginTop="10sp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/kasserverimage2"
                    android:layout_width="150sp"
                    android:layout_height="150sp"
                    android:layout_marginLeft="10sp"
                    android:layout_marginTop="30sp"
                    android:src="@drawable/serverfinal" />

                <LinearLayout
                    android:id="@+id/linearlayoutserver2"
                    android:layout_width="wrap_content"
                    android:layout_height="200sp"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/kasserverbutton2"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:layout_marginRight="15sp"
                        android:layout_marginTop="30sp"
                        android:text="Kaspersky Small Office Security 10 Nodes+1Server+10 Mobile Devices"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="20sp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/servertextView2"
                        android:layout_width="match_parent"
                        android:layout_height="50sp"
                        android:text="Rs. 5200"
                        android:textColor="@android:color/black"
                        android:textSize="25sp"
                        android:textStyle="bold" />


                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffdfdfdf"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="250sp"
        android:layout_gravity="center_horizontal"
        android:paddingBottom="30sp"
        android:src="@drawable/kasperimage" />
    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonheadmouse"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#ff7f31ff"
        android:paddingRight="240sp"
        android:text="MOUSE"
        android:textColor="#ffffff"
        android:textSize="22sp"
        android:textStyle="bold" />
    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonmouse"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="220sp"
        android:text="Wired Logitech"
        android:textColor="@android:color/black"
        android:textSize="15sp" />


    <View
        android:layout_width="283sp"
        android:layout_height="2dip"
        android:layout_gravity="center_horizontal"

        />

    <Button
        android:id="@+id/buttonmouse2"
        android:layout_width="350sp"
        android:layout_height="40sp"
        android:layout_gravity="center_horizontal"
        android:background="#ffffff"
        android:paddingRight="200sp"
        android:text="Wireless Logitech"
        android:textColor="@android:color/black"
        android:textSize="15sp" />

</LinearLayout>